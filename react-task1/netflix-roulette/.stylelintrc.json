{
  "extends": "stylelint-config-standard",
  "plugins": ["stylelint-order"],
  "rules": {
    "order/properties-order": [
      [
        "position",
        "top",
        "right",
        "bottom",
        "left",
        "z-index",
        "display",
        "float",
        "width",
        "height",
        "margin",
        "padding",
        "font",
        "font-style",
        "font-size",
        "line-height",
        "font-family",
        "text-align",
        "color",
        "background-color",
        "border",
        "border-radius",
        "opacity",
        "transition"
      ],
      {
        "unspecified": "bottom"
      }
    ]
  }
}
